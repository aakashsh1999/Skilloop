{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // Enables "paths" below
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "react-native", // ensure correct JSX mode
    "types": ["expo-env"] // helpful for auto-importing expo globals
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
